{%extends "baseMain.html"%}
{%block body%}

{% ifequal domainstartswith ''  %}
<h2>Services Report (by DomainName)</h2>
{% else  %}
<h2>Services Report
{% if orderId %}
(for OrderId = {{orderId}}) 
{% endif%}
</h2>
{% if orderId %}
<a href="/reportServices">Full Report of All Services</a> <br/><br/>
{%else%}
{% ifnotequal domainstartswith ''  %}
<a href="/reportServices">Full Report of All Services</a> <br/><br/>
{% endifnotequal %}
{% endif %}
{% endifequal %}
